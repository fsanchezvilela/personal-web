{
  "name": "personal-web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "check-version": "node ./scripts/tools/check-version.js",
    "dev": "pnpm run check-version && next dev",
    "start": "pnpm run check-version && next start",
    "build": "next build",
    "lint": "next lint",
    "lint:fix": "pnpm run lint -- --fix './src/**/*'",
    "format": "prettier --write './src/**/*'",
    "prepare": "husky install",
    "test": "npm run test:unit:coverage && npm run test:component:coverage",
    "tests": "npm run test:unit:coverage && npm run test:component:coverage && npm run test:e2e",
    "test:unit": "jest --passWithNoTests --config ./jest.unit.json",
    "test:unit:update": "pnpm run test:unit -- --u",
    "test:unit:changed": "pnpm run test:unit -- --onlyChanged",
    "test:unit:coverage": "pnpm run test:unit -- --coverage",
    "test:component": "jest --passWithNoTests --config ./jest.component.json",
    "test:component:update": "pnpm run test:component -- -u",
    "test:component:changed": "pnpm run test:component -- --onlyChanged",
    "test:component:coverage": "pnpm run test:component -- --coverage"
  },
  "dependencies": {
    "circular-dependency-plugin": "^5.2.2",
    "next": "12.3.1",
    "next-pwa": "^5.6.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/node": "18.8.3",
    "@types/react": "18.0.21",
    "@types/react-dom": "18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "autoprefixer": "^10.4.12",
    "eslint": "8.25.0",
    "eslint-config-next": "12.3.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "jest": "^29.1.2",
    "jest-environment-jsdom": "^29.1.2",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.17",
    "prettier": "^2.7.1",
    "tailwindcss": "^3.1.8",
    "typescript": "4.8.4"
  }
}